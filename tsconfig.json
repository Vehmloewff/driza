{
	"compilerOptions": {
		"noImplicitAny": true,
		"diagnostics": true,
		"noImplicitThis": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"declaration": true,
		"declarationDir": "typings",
		"emitDeclarationOnly": true,
		"lib": ["es5", "es6", "dom"],
		"baseUrl": "src",
		"paths": {
			"@self": ["runtime"],

			"@self/easing": ["runtime/easing"],
			"@self/internal": ["runtime/internal"],
			"@self/store": ["runtime/store"],
			"@self/style": ["runtime/style"]
		}
	},
	"target": "ESNext",
	"module": "ES6",
	"include": ["src", "untyped.d.ts"],
	"exclude": ["node_modules"]
}
