{
	"compilerOptions": {
		"noImplicitAny": true,
		"diagnostics": true,
		"noImplicitThis": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"declaration": true,
		"declarationDir": "typings",
		"emitDeclarationOnly": true,
		"lib": ["es5", "es6", "dom"],
		"baseUrl": ".",
		"paths": {
			"sveltronova/runtime": ["runtime"]
		}
	},
	"target": "ESNext",
	"module": "ES6",
	"include": ["src", "runtime", "cli"],
	"exclude": ["node_modules"]
}
