{
	"compilerOptions": {
		"noImplicitAny": true,
		"diagnostics": true,
		"noImplicitThis": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"declaration": true,
		"declarationDir": "typings",
		"emitDeclarationOnly": true,
		"lib": ["es5", "es6", "dom"],
		"baseUrl": "src",
		"paths": {
			"halyard": ["runtime"],

			"halyard/easing": ["runtime/easing"],
			"halyard/internal": ["runtime/internal"],
			"halyard/store": ["runtime/store"],
			"halyard/style": ["runtime/style"],
			"halyard/ui": ["runtime/ui"]
		}
	},
	"target": "ESNext",
	"module": "ES6",
	"include": ["src", "untyped.d.ts"],
	"exclude": ["node_modules"]
}
